<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
              
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
                
        <TextView android:id="@+id/hourText"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Heure de fin"
              android:layout_weight="1" />
              
        <EditText android:id="@+id/hourEditText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="13px"
		android:cursorVisible="false"
                android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
                
        <TextView android:id="@+id/priceText"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="CoÃ»t"/>
              
        <EditText android:id="@+id/priceEditText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="13px"
		android:cursorVisible="false"
                android:layout_weight="1"/>
    </LinearLayout>
    
    <TextView android:id="@+id/commentText"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="Remarques"/>
              
    <EditText android:id="@+id/commentEditText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:cursorVisible="false"
                android:gravity="top"
                android:singleLine="false"
                android:lines="4"
                android:layout_weight="1"/>
                
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
                
    <Button android:id="@+id/buttonCancelIntervention"
            android:text="Annuler"
            android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
            android:layout_weight="1"/>
    
    <Button android:id="@+id/buttonIntervention"
            android:text="Valider"
            android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
            android:layout_weight="1"/>
            
 </LinearLayout>
</LinearLayout>